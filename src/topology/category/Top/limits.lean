instance ulift.small_category (Œ± : Type u) [small_category Œ±] [is_cofiltered Œ±] :
  small_category (ulift.{v} Œ±) :=
{ hom := Œª X Y, ulift (X.down ‚ü∂ Y.down),
  id := Œª X, ‚ü®ùüô _‚ü©,
  comp := Œª X Y Z f g, ‚ü®f.down ‚â´ g.down‚ü© }

