instance ulift.is_cofiltered (Œ± : Type u) [small_category Œ±] [is_cofiltered Œ±] :
  is_cofiltered (ulift.{v} Œ±) :=
{ cocone_objs := Œª X Y, ‚ü®‚ü®is_cofiltered.min X.down Y.down‚ü©, ‚ü®is_cofiltered.min_to_left _ _‚ü©,
    ‚ü®is_cofiltered.min_to_right _ _‚ü©, trivial‚ü©,
  cocone_maps := Œª X Y f g, ‚ü®‚ü®is_cofiltered.eq f.down g.down‚ü©,
    ‚ü®is_cofiltered.eq_hom _ _‚ü©, by { ext, apply is_cofiltered.eq_condition }‚ü©,
  nonempty := ‚ü®‚ü®is_cofiltered.nonempty.some‚ü©‚ü© }

/-- The inverse limit of nonempty finite types is nonempty.

This may be regarded as a generalization of K≈ënig's lemma.
To specialize: given a locally finite connected graph, take `J` to be `‚Ñï` and
`F j` to be length-`j` paths that start from an arbitrary fixed vertex.
Elements of `F.sections` can be read off as infinite rays in the graph. -/
theorem nonempty_sections_of_fintype_inverse_system
  {J : Type u} [small_category J] [is_cofiltered J] (F : J ‚•§ Type v)
  [Œ† (j : J), fintype (F.obj j)] [Œ† (j : J), nonempty (F.obj j)] :
  F.sections.nonempty :=
begin
  -- Step 1: lift everything to the `max u v` universe.
  let J' := ulift.{v} J,
  let down : J' ‚•§ J :=
  { obj := ulift.down,
    map := Œª i j f, f.down },
  let tu : Type v ‚•§ Type (max u v) := ulift_functor.{u v},
  let F' : (ulift.{v} J) ‚•§ Type (max u v) := down ‚ãô F ‚ãô tu,
  haveI : ‚àÄ i, nonempty (F'.obj i) := Œª i,
    ‚ü®ulift.up (classical.arbitrary (F.obj i.down))‚ü©,
  haveI : ‚àÄ i, fintype (F'.obj i) := Œª i,
    fintype.of_equiv (F.obj i.down) equiv.ulift.symm,
  -- Step 2: apply the bootstrap theorem
  obtain ‚ü®u, hu‚ü© := nonempty_sections_of_fintype_inverse_system.init F',
  -- Step 3: interpret the results
  use Œª j, (u (ulift.up j)).down,
  intros j j' f,
  let f' : ulift.up.{v} j ‚ü∂ ulift.up.{v} j' := ‚ü®f‚ü©,
  have h := hu f',
  simp only [functor.comp_map, ulift_functor_map, functor.op_map] at h,
  simp only [‚Üêh],
end

end fintype_konig
